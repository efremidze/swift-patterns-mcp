{
  "name": "swift-patterns-mcp",
  "version": "1.0.3",
  "description": "MCP server providing curated Swift/SwiftUI best practices from leading iOS developers, including patterns and real-world code examples from Swift by Sundell, SwiftLee, and other trusted sources.",
  "type": "module",
  "bin": {
    "swift-patterns-mcp": "build/index.js"
  },
  "files": [
    "build/**",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "setup": "node build/cli/setup.js",
    "auth": "node build/cli/auth.js",
    "source": "node build/cli/source-manager.js",
    "lint": "tsc --noEmit",
    "test": "vitest run"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "swift",
    "swiftui",
    "ios",
    "learning",
    "patterns",
    "best-practices",
    "patreon",
    "youtube",
    "ai-assistant",
    "development-tools",
    "claude",
    "cursor",
    "ai-coding"
  ],
  "author": "Lasha Efremidze",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/efremidze/swift-patterns-mcp.git"
  },
  "homepage": "https://github.com/efremidze/swift-patterns-mcp#readme",
  "bugs": {
    "url": "https://github.com/efremidze/swift-patterns-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "adm-zip": "^0.5.10",
    "dotenv": "^17.2.3",
    "keytar": "^7.9.0",
    "lru-cache": "^11.2.4",
    "minisearch": "^7.2.0",
    "natural": "^8.1.0",
    "node-fetch": "^3.3.2",
    "patreon-dl": "^3.6.0",
    "playwright": "^1.57.0",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/natural": "^5.1.5",
    "@types/node": "^25.0.9",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
