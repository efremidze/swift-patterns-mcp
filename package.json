{
  "name": "swift-patterns-mcp",
  "version": "1.0.8",
  "description": "MCP server providing curated Swift/SwiftUI best practices from leading iOS developers, including patterns and real-world code examples from Swift by Sundell, SwiftLee, and other trusted sources.",
  "type": "module",
  "bin": {
    "swift-patterns-mcp": "build/index.js"
  },
  "files": [
    "build/**",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "setup": "node build/cli/setup.js",
    "auth": "node build/cli/auth.js",
    "source": "node build/cli/source-manager.js",
    "lint": "eslint . && tsc --noEmit",
    "pretest": "npm run build",
    "test": "vitest run"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "swift",
    "swiftui",
    "ios",
    "learning",
    "patterns",
    "best-practices",
    "patreon",
    "youtube",
    "ai-assistant",
    "development-tools",
    "claude",
    "cursor",
    "ai-coding"
  ],
  "author": "Lasha Efremidze",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/efremidze/swift-patterns-mcp.git"
  },
  "homepage": "https://github.com/efremidze/swift-patterns-mcp#readme",
  "bugs": {
    "url": "https://github.com/efremidze/swift-patterns-mcp/issues"
  },
  "dependencies": {
    "@memvid/sdk": "^2.0.152",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@xenova/transformers": "^2.17.2",
    "adm-zip": "^0.5.10",
    "dotenv": "^17.2.3",
    "keytar": "^7.9.0",
    "linkedom": "^0.18.12",
    "minisearch": "^7.2.0",
    "ml-distance": "^4.0.1",
    "natural": "^8.1.0",
    "pino": "^9.5.0",
    "playwright": "^1.57.0",
    "quick-lru": "^7.3.0",
    "rss-parser": "^3.13.0",
    "string-strip-html": "^13.5.3",
    "undici": "^7.18.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/adm-zip": "^0.5.7",
    "@types/natural": "^5.1.5",
    "@types/node": "^25.0.9",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
